' Devastation theme colors based on logo
!define ORANGE #ff8c00
!define BLACK #1a1a1a
!define BEIGE #f5f0e1

' Class styling
skinparam class {
  BorderThickness 1.5
  BackgroundColor BEIGE
  HeaderBackgroundColor BLACK
  HeaderFontColor ORANGE
}

' Rectangle styling
skinparam rectangle {
  BackgroundColor BLACK
  FontColor ORANGE
  BorderColor ORANGE
}

' Title styling
skinparam title {
  FontColor ORANGE
  BorderColor ORANGE
}

